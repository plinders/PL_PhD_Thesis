@article{overly_quantitative_1995,
  title = {Quantitative Measurement of Intraorganelle {{pH}} in the Endosomal-Lysosomal Pathway in Neurons by Using Ratiometric Imaging with Pyranine.},
  author = {Overly, C. C. and Lee, K. D. and Berthiaume, E. and Hollenbeck, P. J.},
