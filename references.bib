	pmid = {17341478},
	keywords = {Animals, Fluorescent Antibody Technique, Golgi Apparatus, Humans, Rats, Biomarkers, Cell Line, Feasibility Studies, Luminescent Proteins, Microscopy, Confocal, Nocodazole, Proteins},
	pages = {709--719}
